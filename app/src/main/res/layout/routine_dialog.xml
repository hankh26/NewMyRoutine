<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp">

    <EditText
        android:id="@+id/ex_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="운동 이름"
        android:inputType="text"
        android:maxLines="1"
        android:minWidth="200dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="세트 수"
        android:layout_below="@id/ex_name"
        android:textSize="30sp"
        android:textColor="#FF000000"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/set_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#FF000000"
        android:layout_marginBottom="8dp"
        android:textSize="24sp"
        android:layout_alignBottom="@id/set"
        android:layout_marginLeft="64dp"
        android:layout_toRightOf="@id/set"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/set_num"
        android:layout_marginLeft="4dp"
        android:layout_alignBottom="@id/set">

        <ImageButton
            android:id="@+id/num_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_keyboard_arrow_up_black_24dp"/>
        <ImageButton
            android:id="@+id/num_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_keyboard_arrow_down_black_24dp"/>

    </LinearLayout>

</RelativeLayout>