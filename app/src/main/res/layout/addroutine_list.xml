<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:contentPadding="16dp"
    android:layout_margin="4dp"    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:id="@+id/exer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="운동이름"
        android:maxLength="10"
        android:textSize="20dp"
        android:textColor="#FF000000"/>
    <LinearLayout
        android:id="@+id/llroutin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="11"
        android:layout_below="@id/exer_name"
        android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/setset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="세트"
        android:layout_weight="3"
        android:textSize="16dp"
        android:textColor="#FF000000"/>
        <TextView
            android:id="@+id/kgkg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="무게"
            android:layout_weight="3"
            android:textSize="16dp"
            android:textColor="#FF000000"/>
        <TextView
            android:id="@+id/raprap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="랩"
            android:textSize="16dp"
            android:textColor="#FF000000"/>
        <Button
            android:id="@+id/btnRecycler"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:onClick="clickAC"
            android:text="-"/>
        <Button
            android:id="@+id/btnRecycler_add"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:onClick="clickAC"
            android:text="+"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numnum"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="1"
                android:paddingLeft="16dp"
                android:textSize="16dp"
                android:textColor="#FF000000"/>
            <EditText
                android:id="@+id/kg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="kg"
                android:layout_weight="3"
                android:paddingLeft="24dp"
                android:layout_centerHorizontal="true"
                android:textSize="16dp"
                android:textColor="#FF000000"/>

            <EditText
                android:id="@+id/lap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="랩"
                android:paddingLeft="12dp"
                android:layout_weight="3"
                android:textSize="16dp"
                android:textColor="#FF000000"/>




        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/AddRR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"/>


    </LinearLayout>



</androidx.cardview.widget.CardView>